<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo2">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        >

        <TextView
            android:text="@string/frmInicio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView3"
            android:layout_weight="1"
            android:textSize="30sp"
            android:textColor="@color/colorNegro"
            android:textAlignment="center"

            />

        <view
            android:layout_width="10dp"
            android:layout_height="match_parent"
            class="android.view.View"
            android:id="@+id/row_tab"
            android:background="@color/colorAzulObscuro"/>


    </LinearLayout>

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_column="3"

        >

        <TableRow
            android:id="@+id/tableRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dip"
            android:layout_marginLeft="@dimen/margen1"
            >

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="83dp"
                android:text="@string/btnEstadoBuses"
                android:id="@+id/button4"
                android:background="@color/colorIndigoClaro"
                android:layout_weight="10"
                android:onClick="estadoBuses"
                android:layout_marginRight="@dimen/margen2"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="83dp"
                android:text="@string/btnNameTimbradoInicio"
                android:id="@+id/button1"
                android:layout_weight="10"
                android:onClick="ir"
                android:background="@color/colorIndigoClaro"
                android:layout_marginRight="@dimen/margen2"

                />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="83dp"
                android:text="@string/btn_Recaudo"
                android:id="@+id/button2"
                android:background="@color/colorIndigoClaro"
                android:onClick="recaudo"
                android:layout_weight="10"
                android:layout_marginRight="@dimen/margen2"
                />
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="83dp"
                android:background="@color/colorIndigoClaro"
                android:layout_marginRight="@dimen/margen2"
                android:text="@string/btnHistorialInicio"
                android:id="@+id/button3"
                android:layout_weight="0"

                android:onClick="historialBuses"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dip"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margen1">


            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="83dp"
                android:text="@string/btnGestionBuses"
                android:background="@color/colorIndigoClaro"
                android:layout_marginRight="@dimen/btnGrande"
                android:id="@+id/button7"
                android:layout_weight="10"
                android:onClick="gestionUnidades"/>

        </TableRow>


        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dip"
            android:layout_marginLeft="@dimen/margen1">


            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:drawableLeft="@drawable/img_preferencias"
                android:layout_height="83dp"
                android:text="@string/btnAjustesInicio"
                android:id="@+id/button6"
                android:layout_weight="10"
                android:onClick="ajustes"
                android:background="@color/colorIndigoClaro"
                />

        </TableRow>

    </TableLayout>
</LinearLayout>
</ScrollView>