<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <Switch android:id="@+id/BtnSwitch"
        android:textOn="@string/pulsador_on"
        android:textOff="@string/pulsadaor_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_action_name"
        android:id="@+id/imageView"
        android:layout_marginLeft="@dimen/margen2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/margen2">
        <TextView
            android:id="@+id/txtNombre"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="@dimen/margen2"
            android:text="Aqui va el nombre bus"
            />
        <TextView
            android:id="@+id/txtplaca"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="@dimen/cast_libraries_material_featurehighlight_inner_margin"
            android:text="placa"
            />
    </LinearLayout>

</LinearLayout>